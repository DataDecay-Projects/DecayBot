{
    "commands": [
        {
            "name": "hello",
            "description": "Says a random variation of hello.",
            "roles": [
                "public"
            ],
            "actions": [
                {
                    "type": "randomMessage",
                    "messages": [
                        "Hi!",
                        "Hello!",
                        "Hello World!"
                    ]
                }
            ]
        },
        {
            "name": "webchat",
            "description": "Gives webchat link",
            "roles": [
                "public"
            ],
            "actions": [
                {
                    "type": "tellraw",
                    "json": [
                        "",
                        {
                            "text": "Webchat link",
                            "color": "red",
                            "bold": true,
                            "clickEvent": {
                                "action": "open_url",
                                "value": "https://datadecay.dev/"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "eval",
            "description": "evaluates code",
            "roles": [
                "public"
            ],
            "actions": [
                {
                    "type": "eval",
                    "eval": "args.slice(0).join(' ')"
                }
            ]
        },
        {
            "name": "test",
            "description": "A test command.",
            "roles": [
                "trusted"
            ],
            "actions": [
                {
                    "type": "validateHash",
                    "hashType": [
                        "trusted",
                        "elevated",
                        "owner"
                    ],
                    "hashArgIndex": 0,
                    "then": [
                        {
                            "type": "chat",
                            "message": "Hello World with valid hash"
                        }
                    ],
                    "else": [
                        {
                            "type": "chat",
                            "message": "Hello World with invalid hash"
                        }
                    ]
                }
            ]
        },
        {
            "name": "creator",
            "description": "Shows the creator of the bot.",
            "roles": [
                "public"
            ],
            "actions": [
                {
                    "type": "chat",
                    "message": "Made by DataDecay!"
                }
            ]
        },
        {
            "name": "code",
            "description": "Shows GitHub link.",
            "roles": [
                "public"
            ],
            "actions": [
                {
                    "type": "tellraw",
                    "json": [
                        "",
                        {
                            "text": "Github Repo",
                            "color": "red",
                            "bold": true,
                            "clickEvent": {
                                "action": "open_url",
                                "value": "https://github.com/DataDecay/DecayBot"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "core",
            "description": "Controls the core (refill/run).",
            "roles": [
                "owner"
            ],
            "actions": [
                {
                    "type": "validateHash",
                    "hashType": [
                        "owner"
                    ],
                    "hashArgIndex": 0,
                    "then": [
                        {
                            "type": "conditional",
                            "condition": "args[0] === 'refill'",
                            "then": [
                                {
                                    "type": "coreCommand",
                                    "command": "refillCore"
                                }
                            ],
                            "else": [
                                {
                                    "type": "coreCommand",
                                    "command": "run",
                                    "args": "args.slice(1).join(' ')"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "cloop",
            "description": "Starts a repeating command loop.",
            "roles": [
                "owner"
            ],
            "actions": [
                {
                    "type": "validateHash",
                    "hashType": [
                        "owner"
                    ],
                    "hashArgIndex": 0,
                    "then": [
                        {
                            "type": "startLoop",
                            "intervalMs": "5",
                            "command": "args.slice(2).join(' ')"
                        },
                        {
                            "type": "chat",
                            "message": "Started cloop."
                        }
                    ],
                    "else": [
                        {
                            "type": "chat",
                            "message": "Invalid Hash"
                        }
                    ]
                }
            ]
        },
        {
            "name": "stop-cloops",
            "description": "Stops all loops.",
            "roles": [
                "owner"
            ],
            "actions": [
                {
                    "type": "validateHash",
                    "hashType": [
                        "owner"
                    ],
                    "hashArgIndex": 0,
                    "then": [
                        {
                            "type": "stopLoops"
                        },
                        {
                            "type": "chat",
                            "message": "Stopped all cloops."
                        }
                    ]
                }
            ]
        },
        {
            "name": "stop",
            "description": "Stops the bot.",
            "roles": [
                "owner"
            ],
            "actions": [
                {
                    "type": "validateHash",
                    "hashType": [
                        "owner"
                    ],
                    "hashArgIndex": 0,
                    "then": [
                        {
                            "type": "chat",
                            "message": "Stopping Bot..."
                        },
                        {
                            "type": "stopBot"
                        }
                    ],
                    "else": [
                        {
                            "type": "chat",
                            "message": "Invalid Hash"
                        }
                    ]
                }
            ]
        },
        {
            "name": "ping",
            "description": "Check if the bot is online.",
            "roles": ["public"],
            "actions": [
                {
                    "type": "chat",
                    "message": "Pong!"
                }
            ]
        },
        {
            "name": "sethome",
            "description": "Sets the bot's home position.",
            "roles": ["trusted"],
            "actions": [
                {
                    "type": "setVariable",
                    "variable": "home",
                    "value": "{bot.position}"
                },
                {
                    "type": "chat",
                    "message": "Home position set!"
                }
            ]
        },
        {
            "name": "home",
            "description": "Teleports the bot to its home position.",
            "roles": ["trusted"],
            "actions": [
                {
                    "type": "teleport",
                    "position": "{home}"
                },
                {
                    "type": "chat",
                    "message": "Teleported to home!"
                }
            ]
        },
        {
            "name": "setname",
            "description": "Sets a new name for the bot.",
            "roles": ["owner"],
            "actions": [
                {
                    "type": "executeCommand",
                    "command": "/username {args[0]}"
                },
                {
                    "type": "chat",
                    "message": "Bot's name changed to {args[0]}."
                }
            ]
        }
    ]
}
